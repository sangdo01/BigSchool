@model IEnumerable<Lab2_DoVanSang.Models.Book>
@{
    ViewBag.Title = "ListBooks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListBooks</h2>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="panel panel-default">
                <div class="panel panel-heading">
                    @item.Title
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "pull-right" })
                    @item.Title
                    @Html.ActionLink("Create", "CreateBook", new { id = item.Id }, new { @class = "pull-right" })
                    @item.Title
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "pull-right" })
                </div>
                <div class="panel-body">
                    <p>
                        <strong>Author: </strong>@item.Author
                    </p>
                    <p>
                        <strong>Public Year: </strong>@item.PublicYear
                    </p>
                    <p>
                        <strong>Price: </strong>@item.Price
                    </p>
                    <p>
                        <img src="/@item.Cover" alt="Hinh thu " />
                    </p>
                </div>
                <div class="panel-footer clearfix">
                    <div class="pull-right">
                        <a href="#" class="btn btn-primary">Oder</a>
                        <a href="#" class="btn btn-default">Read more...</a>
                        @Html.ActionLink("Read more....", "Detail", new { id = @item.Id },
                       new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>
